<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:padding="32dp"
    tools:context=".activities.AdminAddLandlordActivity">

    <TextView
        android:id="@+id/addLandlordTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/merriweather_light"
        android:text="Add Landlord"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/firstNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addLandlordTitle"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/merriweather_light_italic"
        android:hint="First Name"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/lastNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstNameEditText"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/merriweather_light_italic"
        android:hint="Last Name"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/landlordEmailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lastNameEditText"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/merriweather_light_italic"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/landlordPhoneEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/landlordEmailEditText"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/merriweather_light_italic"
        android:hint="Phone Number"
        android:inputType="phone"
        android:textSize="15sp" />

    <Button
        android:id="@+id/addLandlordButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/landlordPhoneEditText"
        android:layout_marginBottom="16dp"
        android:background="@drawable/custom_button_background"
        android:fontFamily="@font/merriweather_black"
        android:padding="12dp"
        android:text="Add Landlord"
        android:textColor="@color/white"
        android:textSize="20sp" />

</RelativeLayout>
